<script src="{{ asset('bundles/static/js/jquery.fred.js')}}"></script>

<script>
      $(document).ready(function(){
        $("#slider").carouFredSel({
          responsive: true,
          auto: {
            timeoutDuration: 10000,
            play:true,
            delay:3000
          },
          items: {
              visible: 1,
              minimum: 1,
              width: 1024,
              height: "36%"
            },
          scroll: {
            pauseOnHover: true,
            fx: "crossfade",
            duration: 1200
          },
          pagination:{
            container: "#pagination",
            anchorBuilder: function(){

              str="<div class=\"bullet\">";
              str+="<span></span>";
              str+="</div>";

              return str;
            }
          },
          prev : "#prev",
          next : "#next"
        
        });

      });
    </script>
