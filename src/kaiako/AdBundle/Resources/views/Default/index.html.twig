{% extends '::frontend.html.twig' %}

{% block article %}

<article>
  <div class="container">
    <header>
     <div class="row">

      <div class="col-sm-8 col-md-8">
        <h1>{{ ad.title | title }}</h1>
        <h5>{{ ad.provinces | join(', ') }}</h5>
      </div>

      <div class="col-lg-offset-2 col-sm-2 col-md-2">
        <h5 class="tac">12 <br><small>Evalucaciones</small></h5>
      </div>

    </div>
  </header>

  <section>
    <div class="row">
      <div class="imagen col-sm-8 col-md-8">
        <img src="holder.js/770x400/vine" alt="">
      </div>

      <div class="sidebar col-sm-4 col-md-4">
        <div class="resumen">
          <div class="wrapper">

            <div class="precio row">
              <div class="col-sm-4 col-md-4">
                Desde: <span class="numero">{{ ad.prize | number_format(2, '.', ',') }} € </span>
              </div> clase mínima 90 min
            </div>

            <div class="ciudad row">
             <div class="col-sm-4 col-md-4">
               <small> Ciudad</small>  <span>{{ ad.provinces | join(', ') }} </span>
             </div>
             <div class="col-sm-4 col-md-4">
               <small>Zona</small> <span>Centro</span>
             </div>
           </div>

           <div class="horarios row">
            <div class="col-sm-4 col-md-4">
              <small>Fecha</small><span> {{ ad.date | date('d/m/Y')}}</span>
            </div>
            <div class="col-sm-4 col-md-4">
              <small>Horario</small>
               
				{% for schedule in ad.schedules %}
				<span>
               	 {{schedule.timeFrom | date('H:i') }} - {{schedule.timeTo | date('H:i') }}
               	</span>
               	{% endfor %}
            </div>
            <div class="col-sm-4 col-md-4">
              <small>Alumnos</small> <span>1 alumno</span>
            </div>
          </div>

          <div class="total row">
            <div class="col-sm-4 col-md-4">
              <small>Subtotal</small> <span class="numero">45€/h</span>
            </div>

          </div>

          <div class="contacto row">
            <div>
              <a href="#" class="btn btn-primary btn-lg">Contacta con tu profesor</a>
            </div>
            <div>
              <small>No lo dudes, desde hoy puedes empezar </small>
            </div>

          </div>

        </div><!-- fin .wrapper -->
      </div> <!-- fin .resumen -->
    </div>

  </div>
</section>

<section>
  <div class="row">

    <div class="col-sm-8 col-md-8">
      <div class="row">
        <div class="col-sm-8 col-md-8">
          <div class="informacion">
            <div class="wrapper">
             {{ ad.description }}
           </div>
         </div>
       </div>
       <div class="col-sm-4 col-md-4">
        <div class="tabla">
          <table class="table table-striped table-bordered table-hover">
            <tbody>
              <tr>
                <td>Deporte</td>
                <td>
                	{{ ad.category.name }}
                </td>
              </tr>
              <tr>
                <td>Ciudad</td>
                <td>{{ ad.provinces | join(', ') }}</td>
              </tr>
              <tr>
                <td>Zona</td>
                <td>Centro</td>
              </tr>
              <tr>
                <td>Precio</td>
                <td>{{ ad.prize }} €</td>
              </tr>
              <tr>
                <td>Grupos</td>
                <td>Si</td>
              </tr>
              <tr>
                <td colspan="2">Dispone de todo el material necesario</td>
              </tr>
              <tr>
                <td colspan="2">Timetable</td>
              </tr>
              <tr>
                <td>Lunes</td>
                <td>17:00-21:00</td>
              </tr>
              <tr>
                <td>Martes</td>
                <td>17:00-21:00</td>
              </tr>
              <tr>
                <td>Miercoles</td>
                <td>17:00-21:00</td>
              </tr>
              <tr>
                <td>Jueves</td>
                <td>17:00-21:00</td>
              </tr>
              <tr>
                <td>Viernes</td>
                <td>17:00-21:00</td>
              </tr>
              <tr>
                <td>Sabado</td>
                <td>17:00-21:00</td>
              </tr>
              <tr>
                <td>Domingo</td>
                <td>17:00-21:00</td>
              </tr>
            </tbody>
          </table>
          <div class="tac"><a href="#" class="btn btn-primary btn-lg">RESERVA YA</a></div>
          
        </div>
      </div>
    </div>

  </div>

  <div class="sidebar col-sm-4 col-md-4">
    <div class="profesor">
      <div class="wrapper">
        <img src="holder.js/200x200/industrial" class="img-circle" alt="">
        <h3>{{ ad.teacher.name }}</h3>
        <a href="#">Mas informacion sobre el profesor</a>
        <table class="table">
          <tbody>
            <tr>
              <td>Ratio de respuesta</td>
              <td>96%</td>
            </tr>
            <tr>
              <td>Tiempo de resupuesta</td>
              <td>en el mismo día</td>
            </tr>
            <tr>
              <td>Calendario actualizado</td>
              <td>hace 5 dias</td>
            </tr>
          </tbody>
        </table>

        <a href="#" class="btn btn-primary btn-lg"> Contacta conmigo</a>
      </div>
    </div>
  </div>
</div>

</section></div>


<section>
  <div class="row">
    
  </div>
  
</section>

</article>
	
{% endblock %}


{% block stylesheets %}
	{{ parent() }}
	<link rel="stylesheet" href="{{asset('bundles/ad/css/anuncio.css')}}">
{% endblock %}